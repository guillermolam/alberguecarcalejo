# Environment Variables for Albergue del Carrascalejo
# Copy this file to .env for local development
# In production (Replit), set these as Secrets

# ===== DATABASE =====
# Primary database for local development (NeonDB)
NEON_DATABASE_URL=postgresql://username:password@ep-example-123456.us-east-1.aws.neon.tech/neondb?sslmode=require

# Alternative database URL (fallback)
DATABASE_URL=postgresql://username:password@ep-example-123456.us-east-1.aws.neon.tech/neondb?sslmode=require

# SQLite database for Spin/Fermyon deployment
SQLITE_DATABASE=./albergue.db

# ===== AUTHENTICATION =====
# JWT secret for token signing/verification
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Auth0 configuration (if using Auth0)
AUTH0_DOMAIN=your-tenant.eu.auth0.com
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret

# ===== NOTIFICATIONS =====
# Twilio for WhatsApp and SMS
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# Email service (Nodemailer/Resend)
SMTP_HOST=smtp.resend.com
SMTP_PORT=587
SMTP_USER=resend
SMTP_PASSWORD=re_xxxxxxxxxxxxxxxxxxxxxxxxxx
FROM_EMAIL=albergue@yourhost.com

# Telegram Bot
TELEGRAM_BOT_TOKEN=123456789:ABCDEFxxxxxxxxxxxxxxxxxxxxxxx
TELEGRAM_CHAT_ID=-100123456789

# ===== SPAIN GOVERNMENT INTEGRATION =====
# SES Hospedajes API for MIR v3.1.2
SES_HOSPEDAJES_URL=https://webservice.mir.es/comunicacion
SES_USERNAME=your-username
SES_PASSWORD=your-password

# ===== EXTERNAL SERVICES =====
# OCR and document processing
TESSERACT_LANG=spa+eng
DOCUMENT_STORAGE_PATH=./uploads/documents

# Google Places API for address autocomplete
GOOGLE_PLACES_API_KEY=AIzaSyxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ===== DEVELOPMENT =====
# Log level
RUST_LOG=info

# Vite dev server (development only)
VITE_DEV_SERVER=http://localhost:5173

# Enable debug features
DEBUG=true

# ===== SECURITY =====
# Encryption key for PII data (AES-256-GCM)
ENCRYPTION_KEY=your-32-character-encryption-key

# Session configuration
SESSION_TIMEOUT_HOURS=24
ADMIN_SESSION_TIMEOUT_HOURS=8

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# ===== BUSINESS LOGIC =====
# Booking configuration
BOOKING_EXPIRY_HOURS=2
MAX_ADVANCE_BOOKING_DAYS=365

# Pricing
DEFAULT_DORM_PRICE=15.00
DEFAULT_PRIVATE_PRICE=35.00
CURRENCY=EUR

# Bed configuration
TOTAL_BEDS=24
DORM_A_BEDS=12
DORM_B_BEDS=10
PRIVATE_BEDS=2