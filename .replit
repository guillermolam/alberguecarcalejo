run = "bun run dev:replit"
modules = ["nodejs-20", "rust-stable", "postgresql-16", "web", "fermyon-spin"]

hidden = [
  ".config",
  ".git",
  "node_modules",
  "dist",
  "pkg",
  "frontend/public"
]

[nix]
channel = "stable-24_05"
packages = [
  "nodejs",
  "wasm-pack",
  "sqlx-cli",
  "fermyon-spin",
  "chromium"
]

[deployment]
deploymentTarget = "autoscale"
build = ["bun", "run", "build"]
run = ["bun", "run", "start"]

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 3002
externalPort = 3002

[[ports]]
localPort = 5173
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 8001
externalPort = 3000

[env]
PORT = "8000"

[workflows]
runButton = "Dev"

[[workflows.workflow]]
name = "Dev"
mode = "parallel"
author = "agent"
  [[workflows.workflow.tasks]]
  task = "shell.exec"
  args = "bun run dev:replit"
  waitForPort = 5173
