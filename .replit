run = "task build"

hidden = [
  ".config",
  ".git",
  "node_modules",
  "dist",
  "pkg",
  "frontend/public"
]

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "autoscale"
build = ["bun", "run", "build"]
run = ["bun", "run", "start"]

[[ports]]
localPort = 80
externalPort = 4200

[[ports]]
localPort = 443
externalPort = 3003

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 3002
externalPort = 3002

[[ports]]
localPort = 5173
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 8001
externalPort = 3000

[env]
PORT = "8000"

[workflows]
runButton = "Dev"

[[workflows.workflow]]
name = "Dev"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev:replit"
waitForPort = 5173

[[workflows.workflow]]
name = "Security Scan"
author = 41744552
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "task sast:all"

